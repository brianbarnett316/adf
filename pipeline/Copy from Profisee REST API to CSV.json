{
	"name": "Copy from Profisee REST API to CSV",
	"properties": {
		"activities": [
			{
				"name": "Copy from Profisee REST API to CSV",
				"description": "Copy records from Profisee via the Profisee REST API to ADLS Gen2 in CSV format.",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"AbsoluteUrl": "$.nextPage"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['pageNumber']"
								},
								"sink": {
									"name": "pageNumber"
								}
							},
							{
								"source": {
									"path": "$['pageSize']"
								},
								"sink": {
									"name": "pageSize"
								}
							},
							{
								"source": {
									"path": "$['resultCount']"
								},
								"sink": {
									"name": "resultCount"
								}
							},
							{
								"source": {
									"path": "$['totalPages']"
								},
								"sink": {
									"name": "totalPages"
								}
							},
							{
								"source": {
									"path": "$['previousPage']"
								},
								"sink": {
									"name": "previousPage"
								}
							},
							{
								"source": {
									"path": "$['nextPage']"
								},
								"sink": {
									"name": "nextPage"
								}
							},
							{
								"source": {
									"path": "$['totalRecords']"
								},
								"sink": {
									"name": "totalRecords"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['internalId']"
								},
								"sink": {
									"name": "internalId"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['id']"
								},
								"sink": {
									"name": "id"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['code']"
								},
								"sink": {
									"name": "code"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['name']"
								},
								"sink": {
									"name": "name"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['color']"
								},
								"sink": {
									"name": "color"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['enterDTM']"
								},
								"sink": {
									"name": "enterDTM"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['enterUserName']"
								},
								"sink": {
									"name": "enterUserName"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['lastChgDTM']"
								},
								"sink": {
									"name": "lastChgDTM"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['lastChgUserName']"
								},
								"sink": {
									"name": "lastChgUserName"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['validationStatusID']"
								},
								"sink": {
									"name": "validationStatusID"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['canUpdate']"
								},
								"sink": {
									"name": "canUpdate"
								}
							},
							{
								"source": {
									"path": "$['data'][0]['canDelete']"
								},
								"sink": {
									"name": "canDelete"
								}
							}
						],
						"collectionReference": "$['data']",
						"mapComplexValuesToString": false
					}
				},
				"inputs": [
					{
						"referenceName": "ProfiseeRESTAPI_Records_Get",
						"type": "DatasetReference",
						"parameters": {
							"entityId": {
								"value": "@variables('EntityId')",
								"type": "Expression"
							},
							"pageSize": 1000,
							"attributes": " [color]",
							"filter": " ",
							"orderBy": " ",
							"dbaFormat": 1,
							"recordCodes": " "
						}
					}
				],
				"outputs": [
					{
						"referenceName": "AdlsGen2BlobCsv",
						"type": "DatasetReference",
						"parameters": {
							"FolderName": {
								"value": "@concat(variables('OutputContainer'), '/', variables('EntityId'))",
								"type": "Expression"
							},
							"FileName": {
								"value": "@concat(variables('EntityId'), '_', string(utcnow()), '.csv')",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"variables": {
			"OutputContainer": {
				"type": "String",
				"defaultValue": "profisee-output"
			},
			"EntityId": {
				"type": "String",
				"defaultValue": "product"
			}
		},
		"folder": {
			"name": "CSV Format"
		},
		"annotations": [],
		"lastPublishTime": "2020-09-25T15:29:08Z"
	}
}